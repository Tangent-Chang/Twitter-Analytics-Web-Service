yum install java-1.7.0-openjdk-devel.x86_64

cd /opt
wget http://mirror.symnds.com/software/Apache/tomcat/tomcat-8/v8.0.28/bin/apache-tomcat-8.0.28.tar.gz
tar xzf apache-tomcat-8.0.27.tar.gz

copy server.xml to /opt/apache-tomcat-8.0.28/conf
copy setenv.sh to /opt/apache-tomcat-8.0.28/bin
copy q1 directory to /opt/apache-tomcat-8.0.28/webapps

cd /opt/apache-tomcat-8.0.28/webapps/WEB-INF/classes
javac -cp "/opt/apache-tomcat-8.0.28/lib/*" test/*.java

cd /opt/apache-tomcat-8.0.28/
bin/startup.sh
